<body>
    <div class="container my-4">
        <p class="fs-1">{{name}}</p>

        <div class="container align-items-start">
            <form method="POST" class="row" novalidate>
            <div class="col-sm-2">
                <select name="flightNumber" class="form-select form-select-sm" aria-label="Small select example">
                    {{#each onlyFlightsNumber as |flightNumber|}}
                        <option value="{{flightNumber.dataValues.flightNumber}}">{{flightNumber.dataValues.flightNumber}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">{{button}}</button>
            </div>
            </form>
        </div>
    </div>
</body>